<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/jobComparison"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobComparison">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp">

        <TextView
            android:id="@+id/ComparetheJobtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3AEAE"
            android:text="Comparison between selected jobs"
            android:textAlignment="center"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comparisonJJobLegendBlank"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textStart"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/compareJob1Legend"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Job 1"
            android:textAlignment="textEnd"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/compareJob2legend"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Job 2"
            android:textAlignment="textEnd"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comparisonJobTitle"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Title"
            android:textAlignment="textStart"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/compareJob1Title"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob2Title"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comparisonJobCompany"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Company"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob1Company"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob2Company"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comparisonJobLocation"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Location"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob1Location"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob2Location"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="240dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comparisonJobCOL"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Cost of Living"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob1COL"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob2COL"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ComparisonJobSalary"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Salary"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob1Salary"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob2Salary"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="360dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ComparisonJobBonus"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Bonus"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob1Bonus"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob2Bonus"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="420dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comparisonJobRSU"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Restricted Stock Units"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob1RSU"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob2RSU"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="480dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ComparisonJobRelocation"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Relocation Stipend"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob1Relocation"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob2Relocation"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="540dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comparisonJobPTO"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Paid Time Off"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob1PTO"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/compareJob2PTO"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="600dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/CompareAnotherJobButtonID"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:onClick="handleClick"
            android:text="Compare Another" />

        <Button
            android:id="@+id/CompareMainMenuButtonID"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:onClick="handleClick"
            android:text="Main Menu" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
