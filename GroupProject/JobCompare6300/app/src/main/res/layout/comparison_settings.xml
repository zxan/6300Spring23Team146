<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comparisonSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp">

        <TextView
            android:id="@+id/ComparisonSettingstitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3AEAE"
            android:text="Please enter values for each weight(1-5)"
            android:textAlignment="center"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textComparisonSalary"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Salary"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textComparisonSalaryWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAF8F8" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textComparisonBonus"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Bonus"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textComparisonBonusWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAF8F8" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textComparisonRSU"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Restricted Stock Units"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textComparisonRSUWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAF8F8" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="240dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textComparisonRelocation"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Relocation Stipend"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textComparisonRelocationWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAF8F8" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        tools:context=".ComparisonSettings">

        <TextView
            android:id="@+id/textComparisonPTO"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Paid Time Off"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textComparisonPTOWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAF8F8" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="540dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/SaveComparisonButtonID"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:onClick="handleClick"
            android:text="Save Job" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>