<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/compareJobs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompareJobs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp">

        <TextView
            android:id="@+id/CompareJobsJobtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3AEAE"
            android:text="Select Jobs to compare"
            android:textAlignment="center"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/compareJobLegendBlank"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text=""
            android:textAlignment="textStart"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/compareJobsJob1Legend"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Title"
            android:textAlignment="textEnd"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/compareJobsJob2legend"
            android:layout_width="103.5dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Company"
            android:textAlignment="textEnd"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="600dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/CompareJobsJobButtonID"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:onClick="handleClick"
            android:text="Compare Job" />

        <Button
            android:id="@+id/CompareJobsCancelJobButtonID"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:onClick="handleClick"
            android:text="Cancel Compare" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
